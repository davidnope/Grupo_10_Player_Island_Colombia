<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&family=Titillium+Web:wght@300;400;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/register.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Island</title>
</head>

<body>
    <%- include('./partials/header') %>
        <main>
            <div class="caja_principal">
                <div class="contenedor_form">
                    <a href="/">
                        <button type="submit" class="boton-atras">
                            <i class="fa-solid fa-arrow-left"></i>
                        </button>
                    </a>
                    <div class="logo">
                        <img src="/img/logoProvisional.png" alt="">
                    </div>
                    <h2>Registrarse</h2>
                    <!-- <%if(locals.errores){%>
                        <%for(indice in errores){%>
                            <p>
                                <%=errores[indice].msg%>
                            </p>
                            <%}%>
                                <%}%> -->
                    <form action="/user/registerSave" method="POST" enctype="multipart/form-data"
                        class="formulario-email-contrasena">
                        <div class="hilera_form">
                            <div class="email-contrasena">
                                <label for="Usuario">Nombre de usuario</label> <br>
                                <input type="text" name="usuario" id="Usuario"
                                    value="<%=locals.old && old.usuario ? old.usuario : null%>"> <br>
                                <%if(locals.errores && errores.usuario){%>
                                    <div class="errores">
                                        <%=errores.usuario.msg%>
                                    </div>
                                    <%}%>
                            </div>

                            <div class="email-contrasena">
                                <label for="Email">Email</label> <br>
                                <input type="text" name="email" id="Email"
                                    value="<%=locals.old && old.email ? old.email : null%>"> <br>
                                <%if(locals.errores && errores.email){%>
                                    <div class="errores">
                                        <%=errores.email.msg%>
                                    </div>
                                    <%}%>
                            </div>

                            <div class="email-contrasena">
                                <label for="Contrasena">Contraseña</label><br>
                                <input type="password" name="contrasena" id="Contrasena"><br>
                                <%if(locals.errores && errores.contrasena){%>
                                    <div class="errores">
                                        <%=errores.contrasena.msg%>
                                    </div>
                                    <%}%>
                            </div>

                            <div class="email-contrasena">
                                <label for="confirmarContrasena">Confirmar contraseña</label><br>
                                <input type="password" name="confirmarContrasena" id="confirmarContrasena"> <br>
                                <%if(locals.errores && errores.confirmarContrasena){%>
                                    <div class="errores">
                                        <%=errores.confirmarContrasena.msg%>
                                    </div>
                                    <%}%>
                            </div>
                        </div>
                        <div class="hilera_form">
                            <div class="email-contrasena">
                                <label for="documento">Numero de documento</label> <br>
                                <input type="number" name="documento" id="documento"
                                    value="<%=locals.old && old.documento ? old.documento : null%>"> <br>
                                <%if(locals.errores && errores.documento){%>
                                    <div class="errores">
                                        <%=errores.documento.msg%>
                                    </div>
                                    <%}%>
                            </div>

                            <div class="email-contrasena">
                                <label for="direccion">Dirrección</label> <br>
                                <input type="text" name="direccion" id="direccion"
                                    value="<%=locals.old && old.direccion ? old.direccion : null%>"> <br>
                                <%if(locals.errores && errores.direccion){%>
                                    <div class="errores">
                                        <%=errores.direccion.msg%>
                                    </div>
                                    <%}%>
                            </div>

                            <div class="email-contrasena">
                                <label for="celular">Celular</label><br>
                                <input type="tel" name="celular" id="celular"
                                    value="<%=locals.old && old.celular ? old.celular : null%>"> <br>
                                <%if(locals.errores && errores.celular){%>
                                    <div class="errores">
                                        <%=errores.celular.msg%>
                                    </div>
                                    <%}%>
                            </div>

                            <div class="email-contrasena">
                                <label for="img">Imagen de perfil</label><br>
                                <input type="file" name="imgUser" id="img"> <br>
                                <%if(locals.errores && errores.imgUser){%>
                                    <div class="errores">
                                        <%=errores.imgUser.msg%>
                                    </div>
                                    <%}%>
                            </div>
                        </div>
                        <div class="boton">
                            <button type="submit">Registrar</button>
                        </div>
                    </form>
                    <div class="parrafo-cambio-registro">
                        <p>¿Ya estas registrado? <a href="/user/login">Iniciar Sesión</a></p>
                    </div>
                </div>

            </div>
        </main>
</body>

</html>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Island</title>
</head>

<body>
    <%- include('./partials/header') %>
        <main>
            <div class="container products-wrapper">
                <div class="row">
                    <div class="titulo">
                        <h2 class="products-title">Estás creando un producto: <br> </h2>
                    </div>
                </div>
                <div class="col-12">
                    <form action="/productos" method="POST" enctype="multipart/form-data">
                        <div class="grupos">
                            <div class="bloque-edicion">
                                <label for="name" class="form-label">Nombre del producto: </label>
                                <input type="text" id="name" name="name" placeholder="Ej: consola X" class="form-input"
                                    value=""><br>
                            </div>
                            <div class="bloque-edicion">
                                <label for="price" class="form-label">Precio del producto:</label>
                                <input type="number" id="price" name="price" placeholder="Ej: $50.000"
                                    class="form-input" value=""><br>
                            </div>
                        </div>
                        <div class="grupos">
                            <div class="bloque-edicion">
                                <label for="discount" class="form-label">Descuento:</label>
                                <input type="number" id="discount" name="discount" placeholder="Ej: 20"
                                    class="form-input" value=""><br>
                            </div>
                            <div class="bloque-edicion">
                                <label for="category" class="form-label">Categoría:</label>
                                <select name="category" id="category" class="form-input">

                                    <option value="otros" selected>Otros</option>
                                    <option value="consola">Consolas</option>
                                    <option value="control">Controles</option>
                                    <option value="edicion-especial">Ediciones especiales</option>
                                    <option value="accesorios">Accesorios</option>
                                </select><br>
                            </div>

                        </div>
                        <div class="grupos">

                            <div class="bloque-edicion">
                                <label for="stock" class="form-label">Stock (cantidad en bodega) :</label>
                                <input type="text" id="stock" name="stock" placeholder="Ej: 10" class="form-input"
                                    value=""><br>
                            </div>

                            <div class="bloque-edicion">
                                <label for="company" class="form-label">Compañia:</label>
                                <select name="company" id="company" class="form-input">

                                    <option value="otros" selected>Otros</option>
                                    <option value="playstation">Playstation</option>
                                    <option value="xbox">Xbox</option>
                                    <option value="nintendo">Nintendo</option>

                                </select><br>
                            </div>

                        </div>
                        <div class="grupos">
                            <div class="bloque-edicion">
                                <label for="color" class="form-label">Color:</label>
                                <select name="color" id="color" class="form-input">

                                    <option value="6" disabled selected>Otros</option>
                                    <option value="1">Negro</option>
                                    <option value="2">Rojo</option>
                                    <option value="3">Gris</option>
                                    <option value="4">Blanco</option>
                                    <option value="5">Azul</option>

                                </select><br>
                            </div>
                            <div class="bloque-edicion">
                                <label for="img" class="form-label" >imagenes: </label>
                                <input type="file" id="img" name="img" multiple class="form-input" maxImg="5"
                                    value=""><br>
                            </div>
                        </div>
                        <div class="grupos">


                            <div class="bloque-edicion">
                                <label for="features" class="form-label">Caracteristicas:</label>
                                <textarea name="features" id="features"
                                    placeholder="Ej: caracteristicas de su producto (max:500)"
                                    class="form-textarea"></textarea><br>
                            </div>

                            <div class="bloque-edicion">
                                <label for="description" class="form-label">Descripción:</label>
                                <textarea name="description" id="description"
                                    placeholder="Ej: breve descripcion de su producto (max:500)"
                                    class="form-textarea"></textarea><br>
                            </div>



                        </div>



                        <div class="grupos">

                            <div class="bloque-edicion">
                                <button type="submit" class="botonGuardar">Guardar producto</button>
                            </div>
                            <div class="bloque-edicion">
                                <button type="reset" class="botonGuardar">Resetear</button>
                            </div>

                        </div>
                    </form>

                </div>


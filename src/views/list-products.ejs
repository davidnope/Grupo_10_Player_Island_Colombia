<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
        integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700&family=Titillium+Web:wght@300;400;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/normalize.css">
    <link rel="stylesheet" href="/css/listas-user-products.css">
    <link rel="stylesheet" href="/css/style.css">
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Island</title>
</head>

<body>
    <%- include('./partials/header') %>
        <main>
            <div class="titulo">
                <h2>Lista usuarios</h2>
            </div>
            <div class="botones-menu">
                <div class="contenedor-boton-productos">
                    <a  class="style-boton" href="/productos/agregar?u=<%=idUser%>">Crear producto</a >
                    <a  class="style-boton" href="#">Borrar productos</a >
                </div>
            </div>
            <%if(products.length % 2==0){%>
                <div class="contenedor-usuarios-par">
                    <%}else{%>
                        <div class="contenedor-usuarios-impar">
                            <%}%>
                                <%products.forEach((products)=>{%>
                                    <div class="usuario">
                                        <div class="contenedor-img">
                                            <img src="/img/productos/<%= products.img_principal %>" alt="">
                                        </div>
                                        <div class="informacion-usuario">
                                            <h3>
                                                <%=products.name%>
                                            </h3>
                                            <div class="vendedor-comprador">
                                                <p><b>Compa√±ia:</b>
                                                    <%=products.category%>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="contenedor-boton">
                                            <a href="/productos/editar?p=<%=products.id%>&u=<%= idUser %>" class="style-boton">
                                                Editar
                                            </a>
                                        </div>
                                    </div>
                                    <%})%>
                                        <%if(products.length % 4==2){%>
                                            <div class="usuario transparente"></div>
                                            <div class="usuario transparente"></div>
                                            <%}%>
                                                <%if(products.length % 2!=0){%>
                                                    <div class="usuario transparente"></div>
                                                    <%if(products.length % 4==1){%>
                                                        <div class="usuario transparente"></div>
                                                        <div class="usuario transparente"></div>
                                                        <%}%>
                                                            <%}%>
                        </div>
        </main>
</body>

</html>